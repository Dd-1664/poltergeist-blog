<article class="post-card post tag-getting-started">
    {# TODO: SET PAGE URL #}
    {# <a class="post-card-image-link" href="/{{ asset(''~article.id~'') }}"> #}
        <div class="post-card-image" style="background-image: url"{{ asset(''~article.pictureLink~'') }}""></div>
    {# </a> #}
    <div class="post-card-content">
        {# TODO: SET PAGE URL #}
        <a class="post-card-content-link" href="/{article.id}">
            <header class="post-card-header">
                <span class="post-card-tags">Article</span>

            <h2 class="post-card-title">{{ article.title }}</h2>
            </header>
            <section class="post-card-excerpt">
                <p>{{ article.articleText|striptags|slice(0,100)|default('Read more') }}...</p>
            </section>
        </a>
        <footer class="post-card-meta">
            <ul class="author-list">
                <li class="author-list-item">
                    <div class="author-name-tooltip">{{ article.author }}</div>
                    {# TODO: SET PAGE URL OR DELETE #}
                    <a href="#" class="static-avatar author-profile-image"><svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><path d="M3.513 18.998C4.749 15.504 8.082 13 12 13s7.251 2.504 8.487 5.998C18.47 21.442 15.417 23 12 23s-6.47-1.558-8.487-4.002zM12 12c2.21 0 4-2.79 4-5s-1.79-4-4-4-4 1.79-4 4 1.79 5 4 5z" fill="#FFF"/></g></svg></a>
                </li>
            </ul>
            <span class="reading-time">{{ article.readTime }} minutes</span>
        </footer>
    </div>
</article>
